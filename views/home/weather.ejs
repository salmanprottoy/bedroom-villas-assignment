            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  let fahrenheitButtonArea = document.getElementById("fahrenheitButtonArea");
  let celsiusButtonArea = document.getElementById("celsiusButtonArea");
  let fahrenheitButton = document.getElementById("fahrenheitButton");
  let celsiusButton = document.getElementById("celsiusButton");
  let weatherInC = document.getElementById("weatherInC");
  let weatherInF = document.getElementById("weatherInF");

  celsiusButtonArea.style.display = "none";
  celsiusButton.style.display = "none";
  weatherInF.style.display = "none";

  fahrenheitButton.onclick = function () {
    celsiusButtonArea.style.display = "block";
    celsiusButton.style.display = "block";
    weatherInF.style.display = "block";
    fahrenheitButtonArea.style.display = "none";
    fahrenheitButton.style.display = "none";
    weatherInC.style.display = "none";
  };
  celsiusButton.onclick = function () {
    celsiusButtonArea.style.display = "none";
    celsiusButton.style.display = "none";
    weatherInF.style.display = "none";
    fahrenheitButtonArea.style.display = "block";
    fahrenheitButton.style.display = "block";
    weatherInC.style.display = "block";
  };
</script>
